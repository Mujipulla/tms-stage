						<a class="btn btn-outline-light btn-floating m-1 text-white" href="#!" role="button">
							<i class="fab fa-facebook-f"></i>
						</a>

						<!-- Twitter -->
						<a class="btn btn-outline-light btn-floating m-1 text-white" href="#!" role="button">
