{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe : Boutique TMS{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px">
        <h1>Modifier mon mot de passe</h1>

        <hr>
        <a class="btn" href="{{ path('app_account') }}" style="background-color: #146c94; color:white">Retourner Ã  mon compte</a><br>
        <hr>
        <div class="row">
            <div class="col-md-3">
                {% include '_partials/aside.html.twig' %}
            </div>
            <div class="col-md-9">
                {% if app.flashes('success') is defined %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>{{ message }}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% elseif app.flashes('danger') is defined %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>{{ message }}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endif %}

                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}