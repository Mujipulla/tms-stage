{% extends 'base.html.twig' %}

{% block title %} Contact {% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class='mt-5 mx-auto d-flex justify-content-center'>Contact </h1>
        <p class='mt-5 mb-5 mx-auto d-flex justify-content-center'>Laissez nous un message</p>
        <div class="row">
            {% if notifier %}
                <div class="col-md-6 mx-auto alert alert-success alert-dismissible fade show" role="alert">
                    {{ notifier }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}
            {{ form_start(form) }}
                <div class="col-md-6 mx-auto">
                    {{ form_row(form.fullname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.sujet) }}
                    {{ form_row(form.message) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

